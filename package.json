{
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "devDependencies": {
    "babel-jest": "^23.0.1",
    "concurrently": "^3.5.1",
    "jest": "22.1.2",
    "lerna": "^2.9.0"
  },
  "scripts": {
    "dev": "concurrently \"cd packages/core && yarn build:watch\" \"cd packages/styleguide && yarn start\" \"cd packages/common-styles && yarn build:watch\"",
    "build": "lerna run build",
    "test": "jest --projects packages/*",
    "bump": "lerna publish --exact --skip-npm --since \"v$(npm info @appearhere/bloom version)\"",
    "test:travis": "yarn test --coverage"
  },
  "eslintConfig": {
    "extends": "./eslint.js"
  },
  "dependencies": {
    "upath": "^1.0.5"
  }
}
